<style>
    .same-source img {height: 160px;}
    @media screen and (max-width: 767px) {
        .same-source img {height: auto;}
    }
    .blog-body a {color: #2ab081 !important; text-decoration: underline;}
    .blog-body ul {padding-left: 30px; list-style: square;}
    .blog-body ol {padding-left: 30px; list-style-type:decimal;}
</style>
<!-- Start page content -->
<div id="page-content" class="page-wrapper">
    <div class="zm-section single-post-wrap bg-white ptb-70 xs-pt-30">
        <div class="container">
            <div class="row">
                <!-- Start left side -->
                <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8 columns">
                    <div class="row mb-40">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <div class="entry-meta-small clearfix mtb-20">
                                <div class="share-social-link pull-left" style="margin-top: 5px;">
                                    <ul class="share-buttons">
                                        <li><a href="https://www.facebook.com/sharer/sharer.php?u=http%3A%2F%2Fcannabiznetwork.com&t=" title="Share on Facebook" target="_blank" onclick="window.open('https://www.facebook.com/sharer/sharer.php?u=' + encodeURIComponent(document.URL) + '&t=' + encodeURIComponent(document.URL)); return false;"><%= image_tag("icons/Facebook.png") %></a></li>
                                        <li><a href="https://twitter.com/intent/tweet?source=http%3A%2F%2Fcannabiznetwork.com&text=:%20http%3A%2F%2Fcannabiznetwork.com&via=CannabizNetwork" target="_blank" title="Tweet" onclick="window.open('https://twitter.com/intent/tweet?text=' + encodeURIComponent(document.title) + ':%20'  + encodeURIComponent(document.URL)); return false;"><%= image_tag("icons/Twitter.png") %></a></li>
                                        <li><a href="http://www.reddit.com/submit?url=http%3A%2F%2Fcannabiznetwork.com&title=" target="_blank" title="Submit to Reddit" onclick="window.open('http://www.reddit.com/submit?url=' + encodeURIComponent(document.URL) + '&title=' +  encodeURIComponent(document.title)); return false;"><%= image_tag("icons/Reddit.png") %></a></li>
                                    </ul>
                                </div>
                            </div>                                    
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <article itemscope itemtype="http://schema.org/Article" class="zm-post-lay-single">
                                <div class="zm-post-thumb">
                            	    <img itemprop="image" src="<%=@blog.image%>" onerror="this.src='<%= asset_path 'substitutes/news-substitute.jpg' %>'" alt="<%=@blog.title%>">
                                </div>
                                <div class="zm-post-dis">
                                    <div class="zm-post-header">
                                        <h2 itemprop="name" itemprop="headline" class="zm-post-title h2"><%=@blog.title.titlecase%></h2>
                                        <div class="zm-post-meta">
                                            <ul>
                                                <% if @blog.author.present? %>
                                                    <li class="s-meta">
                                                        <span itemprop="author" itemscope itemtype="http://schema.org/Person">
                                                            <span itemprop="name"><%=@blog.author.name%></span></span>
                                                    </li>
                                                <% end %>
                                                <% if @blog.published_date.present? %>
                                                    <li itemprop="datePublished" class="s-meta" style="color: #7c8c99;"><%= @blog.published_date.to_formatted_s(:long) %></li>
                                                <% end %>
                                            </ul>
                                        </div>
                                    </div>
                                    <div itemprop="articleBody" class="zm-post-content blog-body">
                                        <%= @blog.body.html_safe %>
                                    </div>
                                    <div class="entry-meta-small clearfix ptb-40 mtb-40 border-top border-bottom">
                                        <div class="share-social-link pull-left" style="margin-top: 5px;">
                                            <ul class="share-buttons">
                                                <li><a href="https://www.facebook.com/sharer/sharer.php?u=http%3A%2F%2Fcannabiznetwork.com&t=" title="Share on Facebook" target="_blank" onclick="window.open('https://www.facebook.com/sharer/sharer.php?u=' + encodeURIComponent(document.URL) + '&t=' + encodeURIComponent(document.URL)); return false;"><%= image_tag("icons/Facebook.png") %></a></li>
                                                <li><a href="https://twitter.com/intent/tweet?source=http%3A%2F%2Fcannabiznetwork.com&text=:%20http%3A%2F%2Fcannabiznetwork.com&via=CannabizNetwork" target="_blank" title="Tweet" onclick="window.open('https://twitter.com/intent/tweet?text=' + encodeURIComponent(document.title) + ':%20'  + encodeURIComponent(document.URL)); return false;"><%= image_tag("icons/Twitter.png") %></a></li>
                                                <li><a href="http://www.reddit.com/submit?url=http%3A%2F%2Fcannabiznetwork.com&title=" target="_blank" title="Submit to Reddit" onclick="window.open('http://www.reddit.com/submit?url=' + encodeURIComponent(document.URL) + '&title=' +  encodeURIComponent(document.title)); return false;"><%= image_tag("icons/Reddit.png") %></a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </article>
                        </div>
                        <!-- End single post image format -->
                        
                        <!--Start Similar post -->
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <aside class="zm-post-lay-a2-area">
                                <div class="row">
                                    <div class="col-xs-12">
                                        <div class="post-title mb-40">
                                            <h2 class="h6 inline-block">Check Out Some Other Posts</h2>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="zm-posts clearfix">
                                        <% @other_blog_posts.each do |blog| %>
                                            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
                                                <article class="zm-post-lay-a2">
                                                    <div class="zm-post-thumb same-source">
                                                        <a href="<%= blog_path(blog) %>">
                                                	        <img src="<%=blog.image%>" onerror="this.src='<%= asset_path 'substitutes/news-substitute.jpg' %>'" alt="<%=blog.title%>">
                                                        </a>
                                                    </div>
                                                    <div class="zm-post-dis">
                                                        <div class="zm-post-header">
                                                            <h2 class="zm-post-title h2"><%= link_to blog.title.truncate(60).titlecase, blog_path(blog)%></h2>
                                                            <div class="zm-post-meta">
                                                                <ul>
                                                                    <% if blog.author.present? %>
                                                                        <li class="s-meta"><%= blog.author.name %></li>
                                                                    <% end %>
                                                                    <li class="s-meta" style = "float: right;"><%= link_to blog.published_date.to_formatted_s(:long), blog_path(blog), class: 'zm-date'%></li>
                                                                </ul>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </article>
                                            </div>
                                        <% end %>
                                    </div>
                                </div>
                            </aside>
                        </div>
                        <!--end similar post-->
                        
                    </div>
                </div>
                <!-- End left side -->
                
                <!-- Start Right sidebar -->
                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4 sidebar-warp columns">
                    <div class="row">
                        <aside class="zm-post-lay-a-area col-sm-6 col-md-12 col-lg-12 sm-mt-50 xs-mt-50">
                            <%= render :partial => "articles/top_products" %>
                        </aside>
                    </div>
                </div>
                <!-- End Right sidebar -->
                
            </div>
        </div>
    </div>
</div>
