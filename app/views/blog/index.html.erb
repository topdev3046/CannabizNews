<!-- Start page content -->
<section id="page-content" class="page-wrapper">
    <!-- Start contact message area -->
    <div class="zm-section bg-white pt-60">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-md-12">
                    <div class="section-title-2 mb-40  text-center">
                        <h3 class="inline-block uppercase">Recent Posts</h3>
                    </div>
                </div>
            </div>
            <!--left side-->
            <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8 columns">
                <%= render :partial => "blog", :collection => @blogs, :as => :blog %>
                
                <!-- Start pagination area -->
        		<div class ="hidden-xs"></div>
        	    <div class="row product-index-pagination">
        	        <div class="zm-pagination-wrap">
        	            <nav class="zm-pagination ptb-40 text-center" style="border-top: none;">
        	            	<%= will_paginate @blogs, params: params %>
        	            </nav>
        	        </div>
        	    </div>
            </div>
            <!--end left side-->
            
            <!-- Start Right sidebar (top products) -->
            <div class="desktop-homepage col-xs-12 col-sm-12 col-md-4 col-lg-4 sidebar-warp columns">
                <div class="row">
					<!-- Start post layout E -->
                    <aside class="zm-post-lay-e-area col-md-12 col-lg-12" id="product-sidebar">
                        <div class="row mb-40">
                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                <div class="section-title">
                                    <h2 class="h6 inline-block uppercase header-button active-header-button no-desktop-pointer">
                                    	<% if @site_visitor_state.product_state %>
                                    		Top Products in <%= @site_visitor_state.abbreviation%>
                                    	<% else %>
                                    		Top Products
                                    	<% end %>
                                    </h2>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                <div class="zm-posts">
                                	<!-- recent products -->
		                        	<%= render :partial => "pages/top_product", :collection => @top_products, :as => :product %>
                                </div>
                            </div>
                            <div class="viewall alignright fullwidth col-lg-12" style="font-size: 20px;">
	                            <%= link_to 'All Products', products_path(state: @site_visitor_state.name) %>
	                        </div>
                        </div>
                    </aside>
                    <!-- Start post layout E -->
                </div>  
            </div>
            <!-- End Right sidebar (top products)-->
            
            <!-- Start Right sidebar -->
            <!--<div class="col-xs-12 col-sm-12 col-md-4 col-lg-4 sidebar-warp columns hidden-745">-->
            <!--    <div class="row">-->
            <!--        <aside class="zm-post-lay-a-area col-sm-6 col-md-12 col-lg-12 sm-mt-50 xs-mt-50">-->
                        <%#= render :partial => "articles/top_products" %>
            <!--        </aside>-->
            <!--    </div>-->
            <!--</div>-->
            <!-- End Right sidebar -->
        </div>
    </div>
    <!-- End contact message area -->
</section>
<!-- End page content -->