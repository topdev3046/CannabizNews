<!-- Start of header area -->
<header  class="header-area header-wrapper clearfix" style="background-image: url('<%= asset_path 'header_footer/cbz_source_banner.png' %>'); background-size: 100%">
    <div class="header-top-bar bg-dark ptb-10">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-7 hidden-991">
                    <div class="header-top-left">
                        <nav class="header-top-menu zm-secondary-menu">
                            <ul>
                                <!--desktop logo-->
                                <% if @state.present? && @state.logo.present? %>
                                    <a href="<%=root_path%>">
                                        <img style ="margin-top: -10px" src="<%=asset_path(@state.logo)%>">
                                    </a>
                                <% elsif @site_visitor_state.present? %>
                                    <a href="<%=root_path%>">
                                        <img style ="margin-top: -10px" src="<%=asset_path(@site_visitor_state.logo)%>">
                                    </a>    
                                <% else %>
                            	    <%= link_to image_tag("header_footer/cbz-logo-color.svg"), root_path %>
                                <% end %>
                            </ul>
                        </nav>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-5">
                    <div class="header-top-right clierfix text-right">
                        <div class="user-accoint topbar-sblock">
                            <% if logged_in? %>
                                <span class="login-btn uppercase"><%= link_to 'Logout', logout_path, method: :delete %></span>
                                <span class="uppercase"> | </span>
                                <span class="login-btn uppercase"><%= link_to 'Change Password', change_password_path(current_user) %></span>
                            <% else %>
                                <span class="login-btn uppercase"><%= link_to 'Login', login_path %></span>
                                <span class="uppercase"> | </span>
                                <span class="login-btn uppercase"><%= link_to 'Register', signup_path %></span>
                            <% end %>
                                <div class = 'not-on-mobile'>
                                    <span class="uppercase"> | </span>
                                    <span class="login-btn uppercase"><%= link_to 'Privacy Policy', privacy_policy_path %></span>
                                    <span class="uppercase"> | </span>
                                    <span class="login-btn uppercase"><%= link_to 'Terms & Conditions', terms_conditions_path %></span>
                                </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="header-bottom-area bg-theme hidden-sm hidden-xs">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="menu-wrapper clearfix">
                        <div class="row">
                            <div class="col-md-11">
                                <div class="mainmenu-area">
                                    <nav class="primary-menu uppercase">
                                        <ul class="clearfix customnavfont">
                                            <li><%= link_to 'Home', root_path %></li>
                                            <li>
                                                <% if current_user %>
                                                    <a href="<%= user_path(current_user)%>">My Page</a>
                                                <% else %>
                                                    <a href="<%= login_path %>">My Page</a>
                                                <% end %>
                                            </li>
                                            <% if @site_visitor_state.present? %>
                                                <li><a href="<%= state_path(@site_visitor_state) %>">News</a></li>
                                            <% else %>
                                                <li><a href="<%= articles_path %>">News</a></li>
                                            <% end %>
                                            
                                            <% if @site_visitor_state.product_state %>
                                                <li><a href="<%= products_path(state: @site_visitor_state.name) %>">Products</a></li>
                                            <% else %>
                                                <li><a href="<%= products_path %>">Products</a></li>
                                            <% end %>
                                            <li>
                                                <%= render 'shared/dropdown_states_header' %>
                                            </li>
                                            <li class="ipad-remove"><a href="<%= contact_us_path %>">Contact Us</a></li>
                                        </ul>
                                    </nav>
                                </div>
                            </div>
                            <div class="col-md-1" style="padding-right: 0;">
                                <div class="search-wrap pull-right">
                                    <div class="search-form">
                                        
                                        <form class="navbar-form" role="search" method="get" action = '/search'>
                                            <input type="search" name="query" placeholder="Search by Product, Not by Dispensary" autocomplete='on' id ="search">
                                            <button type="submit">Search</button>
                                        </form>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- mobile-menu-area start -->
    <div class="mobile-menu-area hidden-md hidden-lg">
        <div class="fluid-container">
            <div class="mobile-menu clearfix">
                <div class="search-wrap mobile-search">
                    <div class="mobile-search-btn"><%=image_tag("icons/search.png")%></div>
                    <div class="mobile-search-form">
                        <form class="navbar-form" role="search" method="get" action = '/search'>
                            <input type="text" name="query" placeholder="Search by Product, not by Dispensary" autocomplete='on' id="search_mobile">
                            <button type="submit"><%=image_tag("icons/search.png")%></button>
                        </form>
                    </div>
                </div>
                <nav id="mobile_dropdown">
                    <ul class="customnavfont">
                        
                        <li><%= link_to 'Home', root_path %></li>
                        <li>
                            <% if current_user %>
                                <a href="<%= user_path(current_user)%>">My Page</a>
                            <% else %>
                                <a href="<%= login_path %>">My Page</a>
                            <% end %>
                        </li>
                        <li><a href="<%= articles_path %>">News</a></li>
                        
                        <% if @site_visitor_state.product_state %>
                            <li><a href="<%= products_path(state: @site_visitor_state.name) %>">Products</a></li>
                        <% else %>
                            <li><a href="<%= products_path %>">Products</a></li>
                        <% end %>
                        
                        <li>
                            <%= render 'shared/dropdown_states_header_mobile' %>    
                        </li>
                        <li><a href="<%= contact_us_path %>">Contact Us</a></li>
                                            
                    </ul>
                </nav>
            </div>       
        </div>
    </div>
    <!-- mobile-menu-area end -->   
</header>

<!--mobile sticky header-->
<div id = "mobile-sticky-logo" class="fix-logo">
    <!--desktop logo-->
    <% if @state.present? && @state.logo.present? %>
        <%= link_to image_tag(asset_path(@state.logo)), root_path %>
    <% elsif @site_visitor_state.present? && @site_visitor_state.logo.present? %>
        <%= link_to image_tag(asset_path(@site_visitor_state.logo)), root_path %>
    <% else %>
	    <%= link_to image_tag("header_footer/mean-bar-logo.png"), root_path %>
    <% end %>
</div>

<div id = "mobile-sticky-header" class="fix-search">
    <div class="col-xs-12">
        <div class="archive-inner">
            <div class="archive-filter">
                <% if @recents.present? || @article.present? %>
                    <%= render 'shared/sticky_header_news' %>	                    
				<% elsif @products.present? || @product.present? %>
					<%= render 'shared/sticky_header_products' %>
				<% elsif @dispensary.present? && current_page?(dispensary_path(@dispensary)) %>
				    <%= render 'shared/sticky_header_dispensary' %>
				<% else %>
				    <%= render 'shared/sticky_header_home' %>
				<% end %>
            </div>
        </div>
    </div>                        
</div>
 <script type="text/javascript">
    $(function() {
      $('#search').autocomplete({
          minLength: 3,
          source: '<%= autocomplete_search_path(:json) %>',
          focus: function(event, ui) {
            $('#search').val(ui.item.name);
            return false;
          },
          select: function(event, ui) {
            $('#search').val(ui.item.name);
            url = window.location.origin
            window.location.href = url + "/products/" + ui.item.slug
            return false;
          },
          create: function () {
           $(this).data('ui-autocomplete')._renderItem = function (ul, item) {
              return $('<li>')
                .append( "<p>" + item.name + "</p>" )
                .appendTo(ul);
            };
          }
      })
    });
    $(function() {
      $('#search_mobile').autocomplete({
          minLength: 3,
          source: '<%= autocomplete_search_path(:json) %>',
          focus: function(event, ui) {
            $('#search').val(ui.item.name);
            return false;
          },
          select: function(event, ui) {
            $('#search_mobile').val(ui.item.name);
            url = window.location.origin
            window.location.href = url + "/products/" + ui.item.slug
            return false;
          },
          create: function () {
           $(this).data('ui-autocomplete')._renderItem = function (ul, item) {
              return $('<li>')
                .append( "<p>" + item.name + "</p>" )
                .appendTo(ul);
            };
          }
      })
    });
</script>

