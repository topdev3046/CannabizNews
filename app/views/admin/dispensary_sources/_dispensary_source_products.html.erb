<table border="0" cellspacing="0" cellpadding="0" id="index_table_stores" class="index_table index" paginator="true" >
    <thead>
        <tr>
            <th class="sortable col-name">Name</th>
            <!--<th class="sortable col-name">Price</th>-->
            <th class="col col-actions">Actions</th>
        </tr>
    </thead>
    <tbody>
        <% index_count = 0 %>
        <% dispensary_source_products.each do |dsp| %>
            <tr class="<%= ((index_count % 2) == 0) ? 'even' : 'odd' %>">
                <td class="col"><%=dsp.product.name %></td>
                <td class="col col-actions">
                    <div class="table_actions">
                        <%= link_to "Remove from Store",
                            delete_from_store_admin_dispensary_source_path(@dispensary_source, 
                            product_id: dsp.product.id), 
                            class: "remove", method: :post %>
                    </div>
                </td>
            </tr>
            <% index_count += 1 %>
        <% end %>
    </tbody>
</table>