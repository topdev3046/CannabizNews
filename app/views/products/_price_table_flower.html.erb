<div class="col-md-12 mt-20">
    
    <!-- state dropdown -->
    <div style="overflow: visible; float: right;">
        <%= form_tag change_state_product_path do %>
            <div style ="display: inline-block; width: 160px;">
                <%= render 'shared/dropdown_states' %>    
            </div>
            <div style ="display: inline-block;">
                 <button type="submit" class="button" style="margin-bottom: 0px; margin: 10px 0px;">Change State</button>   
            </div>
        <% end %>
    </div>
    
    <div class="title">Pricing</div>
    <!-- table -->
    <table id="product-price-table" class="display" style="width: 100% !important;">
        <thead>
            <tr>
                <th>Dispensary</th>
                <th>Location</th>
                <th>1 Gram</th>
                <th>2 Grams</th>
                <th>1/8 Ounce</th>
                <th>1/4 Ounce</th>
                <th>1/2 Ounce</th>
                <th>1 Ounce</th>
            </tr>
        </thead>

            <!--loop through dispensaries-->
            <% @state_to_dispensary.each do |state_name, dispensaries| %>
                
                <% dispensaries.each do |dispensary_key| %>
                    <tr>
                        <td class="dispensary-td"><%=link_to dispensary_key.name, dispensary_path(dispensary_key.dispensary)%></td>
                        <td>
                            <%=dispensary_key.location%>
                        </td>
                        <% value = @dispensary_to_product[dispensary_key.id] %>
                        
                        <% 
                            i = 0
                            loop do 
                                dsps = value.dsp_prices.select { |dsp| dsp.display_order == i }
                                if dsps.size > 0
                        %>
                                    <td style="text-align:center;">$<%=dsps.first.price%></td>    
                                <% else %>
                                    <td style="text-align:center;">--</td>
                                <% end
                                break if i == 5
                                i += 1
                            end
                        %>
                        
                    </tr>
                
                <% end %> <!-- end of loop over dispensaries in state  -->
                
            <% end %> <!--end of state to dispensary loop-->
        
    </table>
</div>